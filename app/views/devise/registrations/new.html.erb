<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "new_user form-signup"}) do |f| %>
  <h2> <%= t :sign_up %></h2>

  <%= devise_error_messages! %>

  <div class="field">
    <p><%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %></p>
  </div>

  <div class="field">
    <p><%= f.label :city %>
    <%= f.text_field :city, class: "form-control" %></p>
  </div>

  <div class="field">
    <p><%= f.label :email %>
    <%= f.email_field :email, class: "form-control" %></p>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em> <%= t :minumum_characters, min: @minimum_password_length %></em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="field">
    <p><%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %></p>
  </div>

  <div class="field">
    <p><%= f.label :facebook %>
    <%= f.text_field :facebook, class: "form-control" %></p>
  </div>

  <div class="field">
    <p><%= f.label :twitter %>
    <%= f.text_field :twitter, class: "form-control" %></p>
  </div>

  <div class="actions">
    <%= f.submit t(:sign_up), class: "btn btn-lg btn-primary btn-block" %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>
