<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "new_user form-signin"}) do |f| %>
  <h2 class="form-signin-heading"> <%= t :log_in %></h2>
  <div class="field">
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control email", placeholder: t(:email) %>
  </div>

  <div class="field">
    <%= f.label :password, class: "sr-only" %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control password", placeholder: t(:password) %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit t(:log_in), class: "btn btn-lg btn-primary btn-block" %>
  </div>

  <%= render "devise/shared/links" %>
<% end %>
