<%= render 'sidebar' %>
<div class="container fixed-width col-sm-9">
  <div class="jumbotron">
    <h1> <%= t :site_name unless current_user %> </h1>
    <p class="lead"> <%= t(:hello) unless current_user %> </p>
    <p class="lead"> <%= t(:welcome, user: current_user.email) if current_user %> </p>
    <p class="lead"> <%= t(:what_to_do) if current_user %> </p>
    <p>
      <%= (link_to t(:sign_up), new_user_registration_path, class: "btn btn-lg btn-success", role: "button") unless current_user %>
      <%= (link_to t(:create_recipe), new_recipe_path, class: "btn btn-lg btn-success", role: "button") if current_user %>
      <%= (link_to t(:favourite_recipes), user_path(current_user), class: "btn btn-lg btn-success", role: "button") if current_user %>
    </p>
  </div>

  <div class="row marketing">
    <div class="col-lg-6">
      <h2> <%= t :favourite_recipes %></h2>
      <%= render @favourites, color: "cuisine" %>
    </div>

    <div class="col-lg-6">
      <h2> <%= t :recent_recipes %></h2>
      <%= render @recipes, color: "type" %>
    </div>
  </div>
</div>
