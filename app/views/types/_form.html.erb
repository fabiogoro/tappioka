<div class="form row">
  <%= form_for @type, html: {class: "form-horizontal"} do |f| %>
    <div id="errors">
      <% if @type.errors.any? %>
        <h2><%= t('errors.template.header', count: @type.errors.size, model: t("activerecord.models.type")) %></h2>
        <h4><%= t('errors.template.body', count: @type.errors.size) %></h4>
        <ul>
        <% @type.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      <% end %>
    </div>
    <div class="form-group">
      <p><%= f.label :name %><br>
      <%= f.text_field :name, class:"title col-xs-12" %></p>
    </div>

    <div class="btn-group pull-right">
      <%= link_to t(:cancel), root_path, class: "btn btn-danger" %><%= f.submit "Salvar", class: "btn btn-success" %>
    </div>
  <% end %>
</div>
